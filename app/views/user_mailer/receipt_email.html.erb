<h2> Jungle has received you order! Order will be shipped within 2 business days<h2>
<h1>Order #<%= @order.id %></h1>
<div>
  <table>
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    <%  @line_items.each do |line_item| %>
  <tr>
  <td>
    <h4><%= line_item.product.name %></h4>
    <br>
    <p><%= line_item.product.description %></p>
  </td>
  <td>
    <%= line_item.product.price %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td>
    <%= line_item.product.price * line_item.quantity %>
  </td>
</tr>
<% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
        <%= @order.total_cents/100.00 %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>